<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#A0C5F4"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:contentPadding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonFlightAddToProfile"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:backgroundTint="#3F51B5"
                android:text="@string/FlightResultButton"
                app:layout_constraintBottom_toBottomOf="@+id/OptionPrice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/OptionPrice"
                app:layout_constraintTop_toTopOf="@+id/OptionPrice" />

            <TextView
                android:id="@+id/textViewOptionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/OptionName"
                app:layout_constraintTop_toTopOf="@+id/OptionName" />

            <TextView
                android:id="@+id/OptionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Leave:"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOptionName" />

            <TextView
                android:id="@+id/textViewOptionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/OptionStart"
                app:layout_constraintTop_toTopOf="@+id/OptionStart" />

            <TextView
                android:id="@+id/OptionEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Arrive:"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOptionStart" />

            <TextView
                android:id="@+id/textViewOptionEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/OptionEnd"
                app:layout_constraintTop_toTopOf="@+id/OptionEnd" />

            <TextView
                android:id="@+id/OptionPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="128dp"
                android:text="Price"
                android:textSize="30sp"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOptionEnd" />

            <TextView
                android:id="@+id/dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="@string/dollarStr"
                android:textSize="30sp"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="@+id/OptionPrice"
                app:layout_constraintEnd_toStartOf="@+id/OptionPrice"
                app:layout_constraintTop_toTopOf="@+id/OptionPrice" />

            <TextView
                android:id="@+id/OptionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>